@model Supify.Models.Playlist
@{
    ViewData["Title"] = "Add Playlist";
    var playlists = ViewData["Playlists"] as List<Playlist>;
}

<!-- this view is a selector for which playlist to delete-->

<h1 class="display-4 text-center"> Delete your playlists</h1>
<br /><br /><br /><br />

@if (playlists.Any())
{
<div class="text-center"><!-- displays every playlist sent by the controller, and makes a list ot of it (every following elements will be displayed for every playlist in the list-->
    @foreach (var playlist in playlists)
    {
<form action="/Playlist/deletePlaylist" method="post">
    → <label for="Id">@playlist.Name</label>
    <input style="display: none;" id="Id" name="Id" type="number" value="@playlist.Id">
    <button type="submit" class="btn btn-outline-dark">Delete <img src="~/trash.png" style="width:15px;" /></button>
    <br /><br/>
</form>}
</div> }

            else
            {
<div class="text-center">
    <!-- if there is no playlist, display there is nothing to delete & buttons to create one -->
    <div class="playlist-empty">
        <p>You don't have any playlist :(</p>
        <a asp-controller="Playlist" asp-action="createPlaylist"><button class="btn btn-outline-dark">Create your first Playlist ! </button></a>
    </div>
</div>}