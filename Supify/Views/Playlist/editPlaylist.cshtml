@{
    ViewData["Title"] = "Music player";
}
<script src="https://unpkg.com/wavesurfer.js"></script>
<script src="~/js/site.js"></script>
<link href="~/css/site.css" rel="stylesheet" />

<div class="text-center" id="index_page">
    <h1 class="display-4">Edit your playlists</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">PDDDDD</a>.</p>
    <div id="waveform">
    </div>
    <button class="btn btn-outline-dark" data-action="play" onclick="wavesurfer.playPause()">||</button>
    <div class="volbox">
        <br /><br />
        <img src="~/sound.png" alt="Volume :" width="5%" height="5%" />
        <br />
        <input id="volume" type="range" min="0" max="0.5" step="0.05">
    </div>
</div>


